<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.MemberDAO" >
	
<!-- 회원가입 -->
<insert id="insertMember" parameterType="memberdto" >
 insert into member values (#{m_id},#{m_password},#{m_name},#{m_address},#{m_phone},#{m_email},#{m_sex},now()) 
</insert>

<!-- 회원가입확인 -->
<select id="insertCheck" resultType="String">
	select * from member where m_id=#{m_id}	and m_password=#{m_password}
</select>

<!-- 회원정보조회 -->
<select id="selectOneMember" resultType="memberdto" parameterType="String">
	select * from member where m_id=#{m_id}
</select>

<!-- 회원정보수정 -->
<update id="updateMember" parameterType="memberdto" >
	update member set m_id=#{m_id}, m_name=#{m_name},m_address=#{m_address} ,m_phone=#{m_phone}, m_email=#{m_email} where m_id=#{m_id}
</update>

<!-- 아이디체크 -->
<select id="checkId" resultType="int" parameterType="String">
	select count(m_id) from member where m_id=#{m_id}
</select>

<!-- 회원탈퇴 -->
<delete id="deleteMember" parameterType="String">
delete from member where m_id=#{m_id}
</delete>
</mapper>

