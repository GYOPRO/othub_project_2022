<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.MemberDAO" >
	
<!-- 회원가입 -->
<insert id="insertMember" parameterType="memberdto" >
 insert into member(m_id,m_pw,m_name,m_address,m_phone,m_email,m_sex) 
 values (#{m_id},#{m_pw},#{m_name},#{m_address},#{m_phone},#{m_email},#{m_sex}) 
</insert>

<!-- 회원가입확인 -->
<select id="insertCheck" resultType="String">
	select * from member where m_id=#{m_id}	and m_pw=#{m_pw}
</select>

<!-- 회원정보조회 -->
<select id="selectOneMember" resultType="memberdto" parameterType="String">
	select * from member where m_id=#{m_id}
</select>

<!-- 회원정보수정 -->
<update id="updateMember" parameterType="memberdto" >
	update member set m_id=#{m_id}, m_name=#{m_name},m_address=#{m_address} ,m_phone=#{m_phone}, m_email=#{m_email} where m_id=#{m_id}
</update>

<!-- 아이디체크 -->
<select id="checkId" resultType="int" parameterType="String">
	select count(m_id) from member where m_id=#{m_id}
</select>

<!-- 회원탈퇴 -->
<delete id="deleteMember" parameterType="String">
delete from member where m_id=#{m_id}
</delete>

<!-- 모든 회원정보 조회 -->
<!-- 회원리스트 조회 -->
<select id="selectMemberList" resultType="memberdto">
	select m_id,m_pw,m_name,m_email,m_phone,m_sex,m_address,m_regdate,role from member order by role
</select>

<!-- 관리자 회원정보 수정 -->
<update id="updateMemberByAdmin" parameterType="memberdto" >
	update member set role=#{role} where m_id=#{m_id}
</update>


</mapper>

